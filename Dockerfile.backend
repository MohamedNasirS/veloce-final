FROM node:18
WORKDIR /app
COPY backend/package*.json ./
RUN npm install
COPY backend/prisma ./prisma/
COPY backend/node_modules/.prisma ./node_modules/.prisma/
ENV PRISMA_ENGINES_CHECKSUM_IGNORE_MISSING=1
RUN npx prisma generate
COPY backend/ .
RUN npm run build
EXPOSE 3001
CMD ["npm", "run", "start:dev"]