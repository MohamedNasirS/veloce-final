FROM node:18 AS build
WORKDIR /app

# Copy env and install packages
COPY .env .env
COPY package*.json ./
RUN npm install

# Copy app source and build with base path set for marketplace
COPY . .

# Force Vite to build with correct base path
RUN npm run build -- --base=/marketplace/

# Serve via NGINX
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html/marketplace
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
